<table class='table'>
  <tr><%= attachment_image_tag(member, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>名前</th>
	  <th><%= member.name %></th>
  </tr>
  <tr>
    <th>科目</th>
    <th><%= member.subject %></th>
  </tr>
  <tr>
	  <th>自己紹介</th>
	  <th><%= member.introduction %></th>
  </tr>
  <tr>
   <th>フォロワー数</th>
   <th><%= link_to member.followings.count, member_followings_path(member.id) , method: :get  %></th>
  </tr>
  <tr>
    <th>フォロー数</th>
    <th><%= link_to member.followers.count, member_followers_path(member.id) , method: :get  %></th>
  </tr>
</table>

<div class='row'>
 <% if current_member != member %>
  <% if current_member.following?(member) %>
   <%= link_to "フォロー外す", member_relationships_path, method: :delete, class: "btn btn-info" %>
  <% else %>
   <%= link_to "フォローする", member_relationships_path, method: :post, class: "btn btn-success" %>
  <% end %>
  <% else %>
  <%= link_to '',edit_member_path(member),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_member_#{member.id}" %>
 <% end %>
</div>