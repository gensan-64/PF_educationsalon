<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>会員情報</h2>
      <%= form_with model:@member, local:true do |f| %>
       <div class="form-grop">
         <%= f.label :name %>
         <%= f.text_field :name, class: "form-control name" %>
       </div>
       <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
       </div>
       <div class="form-grop">
        <%= f.label :subject %>
        <%= f.text_field :subject, class: "form-control subject" %>
       </div>
       <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
       </div>
       <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
       </div>
     <% end %>
    </div>
  </div>
</div>